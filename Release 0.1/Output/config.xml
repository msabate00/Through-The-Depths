<config>
	<app>
		<title>Game Development Testbed</title>
		<organization>CITM</organization>
	</app>

	<renderer>
		<vsync value="true"/>
	</renderer>

	<window>
		<resolution width="1024" height="768" scale="2"/>
		<fullscreen value="false"/>
		<borderless value="false"/>
		<resizable value="false"/>
		<fullscreen_window value="false"/>
	</window>

	<particles>
		<mainParticleTexture texturepath="Assets/Textures/particles.png"/>
	</particles>



	<audio>
		<music volume="128"/>
		<fx volume="128"/>
	</audio>

	<scene>
		<!-- La posicion del player ahora funciona por el tiled-->
		<player x="300" y="352" texturepath="Assets/Textures/player.png" speed="0.34">
			<coinAudio path="Assets/Audio/Fx/retro-video-game-coin-pickup-38299.ogg"/>
			
		</player>
		<item x="256" y="515" texturepath="Assets/Textures/goldCoin.png"/>
		<item x="416" y="512" texturepath="Assets/Textures/goldCoin.png"/>
		<item x="384" y="352" texturepath="Assets/Textures/goldCoin.png"/>
